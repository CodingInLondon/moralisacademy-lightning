extends ./layout

block content

    div(class="container")

        main

            div(class="py-5 text-center")

                <img class="d-block mx-auto mb-4" src="/assets/smallcarrots.png" alt="" >

                h2 You were not charged 

                p(class="lead") Dear 
                    =buyer.name  
                    , sorry the payment did not go through 


            div(class="row g-5") 

                div(class="col-md-7 col-lg-8")

                    p The invoice for an amount of 
                    p=currency 
                        =price 
                    p was not paid.

                    hr(class="my-4")  

                    h4(class="mb-3") Customer details

                    p
                        label(class="form-label") Name: 
                            =buyer.name 
                    p
                        label(class="form-label") Email: 
                            =buyer.email
                    p
                        label(class="form-label") Address: 
                            =buyer.address1
                    p 

                    hr(class="my-4") 

                form(method='get', action='/')
                    input(class="w-100 btn btn-primary btn-lg" type='submit', name='submit' value="Return to the store")





